<div class="mx-auto max-w-xl p-6">
  <p class="mb-6 text-lg"><%= @conv.text %></p>

  <% if @choices.any? %>
    <ul class="space-y-3">
      <% @choices.each do |c| %>
        <li>
          <%= link_to c.label, chat_path(conversation_id: c.next_conversation_id), class: "underline" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="space-y-4">
      <p>おしまい！</p>
      <%= link_to "入口にもどる", main_path, class: "underline" %>
    </div>
  <% end %>
</div>
