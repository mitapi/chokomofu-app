<div class="bg-white/80 backdrop-blur rounded-t-2xl shadow-lg p-4 space-y-3">
  <div class="rounded-2xl bg-white shadow p-3">
    <p class="text-sm text-neutral-800">
      おやつをあげる？
    </p>
  </div>

  <div class="grid grid-cols-3 gap-2">
    <%# snack_type の値は、あなたの enum/定数に合わせてね %>
    <% snacks = [
      { key: "cookie",  label: "クッキー" },
      { key: "jerky",   label: "ジャーキー" },
    ] %>

    <% snacks.each do |s| %>
      <%= button_to s[:label],
            give_snack_path(snack_type: s[:key]),
            method: :post,
            form: { data: { turbo_frame: "snack_panel" } },
            class: "rounded-xl bg-orange-100 hover:bg-orange-200 text-sm py-2 px-2 shadow-sm" %>
    <% end %>
  </div>
</div>