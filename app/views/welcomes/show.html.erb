<div class="bg-slate-50 min-h-screen flex flex-col w-[600px]">
  <section class="bg-[#fcdf97] flex font-bold justify-center items-center relative text-[30px] text-[#5b2d00] h-[80px] w-auto ">
    <%= "もふもふタウンのおはなし" %>
  </section>

  <div class="flex relative h-[420px] w-[600px] px-4 justify-center">
      <!-- 下レイヤー：矢印用の横長ボックス -->
      <div class="absolute inset-0 flex items-center justify-between px-6">
        <button
          type="button"
          data-action="welcome-steps#prev"
          class="text-4xl leading-none"
        >
          ＜
        </button>

        <button
          type="button"
          data-action="welcome-steps#next"
          class="text-4xl leading-none"
        >
          ＞
        </button>
      </div>

      <!-- 上レイヤー：テキスト（白枠） -->
      <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
        <div
          data-welcome-steps-target="step"
          class="pointer-events-auto"
        >
          <%= render "step_world" %>
        </div>

        <div
          data-welcome-steps-target="step"
          class="hidden pointer-events-auto"
        >
          <%= render "step_usage" %>
        </div>

        <div
          data-welcome-steps-target="step"
          class="hidden pointer-events-auto"
        >
          <%= render "step_nickname" %>
        </div>

        <div
          data-welcome-steps-target="step"
          class="hidden pointer-events-auto"
        >
          <%= render "step_guide" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-center items-center py-4 text-[#5b2d00]">
    <span data-welcome-steps-target="counter">1 / 4</span>
  </div>
</div>