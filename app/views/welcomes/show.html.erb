<div class="bg-slate-50 min-h-screen flex flex-col w-[600px]">
  <section class="bg-[#fcdf97] flex font-bold justify-center items-center relative text-[30px] text-[#5b2d00] h-[80px] w-auto">
    <%= "もふもふタウンのおはなし" %>
  </section>

  <div 
    class="flex relative h-[700px] w-[600px] px-4 justify-center"
    data-controller="welcome-steps"
  >
    <!-- 下レイヤー：矢印用の横長ボックス -->
    <div class="absolute inset-0 flex items-center justify-between px-8 z-10">
      <button
        type="button"
        data-action="click->welcome-steps#prev"
        data-welcome-steps-target="prevButton"
        class="text-6xl text-[#5b2d00] leading-none px-4 py-2 cursor-pointer"
      >
        ‹
      </button>

      <button
        type="button"
        data-action="click->welcome-steps#next"
        data-welcome-steps-target="nextButton"
        class="text-6xl text-[#5b2d00] leading-none px-4 py-2 cursor-pointer"
      >
        ›
      </button>
    </div>

    <!-- 上レイヤー：テキスト（白枠） -->
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
      <div
        data-welcome-steps-target="step"
        class="pointer-events-auto"
      >
        <%= render "step_world" %>
      </div>

      <div
        data-welcome-steps-target="step"
        class="hidden pointer-events-auto"
      >
        <%= render "step_usage" %>
      </div>

      <div
        data-welcome-steps-target="step"
        class="hidden pointer-events-auto"
      >
        <%= render "step_nickname" %>
      </div>
    </div>
    <div class="absolute left-1/2 top-[88%] translate-x-[-50%] flex justify-center items-center mt-[10px] text-[#5b2d00]">
      <span data-welcome-steps-target="counter">1 / 3</span>
    </div>
  </div>
</div>