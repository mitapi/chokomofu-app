<% content_for :head do %>
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= @mofu_diary.title %>">
  <meta name="twitter:description" content="<%= @mofu_diary.line1 %> / <%= @mofu_diary.line2 %>">
  <meta name="twitter:image" content="<%= og_mofu_diary_url(@mofu_diary.share_token) %>">
  <meta name="twitter:url" content="<%= share_mofu_diary_url(@mofu_diary.share_token) %>">
<% end %>

<div class="mx-auto max-w-xl p-4">
  <h1 class="text-xl font-bold"><%= @mofu_diary.title %></h1>

  <div class="mt-4 rounded-xl border bg-white p-4 shadow-sm">
    <p><%= @mofu_diary.line1 %></p>
    <p><%= @mofu_diary.line2 %></p>

    <div class="mt-4">
      <img src="<%= og_mofu_diary_path(@mofu_diary.share_token) %>" alt="もふ日記OGP" class="w-full rounded-xl border">
    </div>
  </div>
</div>