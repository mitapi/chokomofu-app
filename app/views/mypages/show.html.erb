<div class="bg-slate-50 min-h-screen flex flex-col w-[600px]">
  <section class="bg-[#ffebb8] shadow-sm border-b border-yellow-300/40 flex font-bold justify-center items-center relative text-[30px] text-[#5b2d00] h-[75px] w-auto">
    <div class="w-15 pl-8 flex items-center justify-start">
      <%= link_to "/main",
          class: "flex items-center justify-center w-11 rounded-full bg-[#fffbf5] hover:bg-[#f5efe6] p-1 shadow-sm" do %>
        <%= render "shared/icon_close", class: "w-7 h-7" %>
      <% end %>
    </div>

    <div class="flex-1 text-center">
      <h1 class="text-[30px] font-bold text-[#5b2d00]">
        マイページ
      </h1>
    </div>

    <div class="w-15"></div>
  </section>

  <!-- 以下ボタン群 -->
  <div class="max-w-md mx-auto px-4 pt-[30px] pb-[40px] space-y-8">

    <!-- 設定 -->
    <!-- プロフィール -->
    <section class="w-full max-w-[600px] mb-9">
      <div class="flex items-center justify-between mb-2">
        <!-- 左側 -->
        <div class="flex items-center gap-5">
          <h2 class="text-sm font-semibold text-gray-600">プロフィール</h2>
          <%= render "shared/flash_notice" %>
        </div>

        <!-- 右側 -->
        <%= link_to "編集", profile_mypage_path,
            class: "rounded-lg border border-orange-300 bg-white px-3 py-1 text-sm hover:border-orange-300 hover:bg-yellow-100" %>
      </div>

      <div class="flex items-center justify-start gap-6 rounded-xl border border-orange-300 bg-white p-4 w-[390px] h-[140px]">
        <!-- キャラ画像スペース -->
        <div class="w-30 h-24 rounded-xl bg-gray-100 flex items-center justify-center text-xs text-gray-400">
          キャラ画像
        </div>

        <!-- プロフィール情報 -->
        <div class="text-sm space-y-1">
          <p>ニックネーム：<b><%= @user.nickname %></b></p>
          <p>地域：<b><%= region_label(@user.region) %></b></p>
          <p>キャラクター：<span class="text-gray-400">—</span></p>
          <p>引き継ぎ設定：<span class="text-gray-400">未設定</span></p>
        </div>
      </div>
    </section>

    <!-- このアプリについて -->
    <section>
      <h2 class="text-sm font-semibold text-gray-600 mb-3">
        このアプリについて
      </h2>

      <div class="space-y-3">
        <!-- 引き継ぎ設定 -->
        <button
          disabled
          class="w-full rounded-lg border border-gray-200 bg-gray-100 px-4 py-3 text-left text-gray-400 flex justify-between">
          <span>引き継ぎ設定</span>
          <span class="text-xs">準備中</span>
        </button>

        <!-- 遊び方 -->
        <%= link_to "このゲームの遊び方",
            "/mypage/how_to_play",
            class: "block w-full rounded-lg border border-orange-300 bg-white px-4 py-3 text-left hover:border-orange-300 hover:bg-yellow-100" %>

        <!-- 以下は準備中 -->
        <% ["データの取り扱いについて", "利用規約", "プライバシーポリシー", "お問い合わせ"].each do |label| %>
          <button
            disabled
            class="w-full rounded-lg border border-gray-200 bg-gray-100 px-4 py-3 text-left text-gray-400 flex justify-between">
            <span><%= label %></span>
            <span class="text-xs">準備中</span>
          </button>
        <% end %>
      </div>
    </section>

  </div>
</div>